extends ../layout

block content
	.container
		.row
			form.form-horizontal(method='post',action='/admin/movie/new')
				input(type='hidden',name="movie[_id]",value='#{movie._id}')
				.form-group
					label.col-sm-1.control-label(for='inputtTitle') 电影名字
					.col-sm-9
						input#inputtTitle.form-control(type='text',name='movie[title]')				
				.form-group
					label.col-sm-1.control-label(for='inputtDoctor') 导演
					.col-sm-9
						input#inputtDoctor.form-control(type='text',name='movie[Doctor]')
				.form-group
					label.col-sm-1.control-label(for='inputtCountry') 国家
					.col-sm-9
						input#inputtCountry.form-control(type='text',name='movie[country]')				
				.form-group
					label.col-sm-1.control-label(for='inputtlanguage') 语言
					.col-sm-9
						input#inputtlanguage.form-control(type='text',name='movie[language]')						
				.form-group
					label.col-sm-1.control-label(for='inputtYear') 上映年份
					.col-sm-9
						input#inputtYear.form-control(type='text',name='movie[year]')				
				.form-group
					label.col-sm-1.control-label(for='inputtSummary') 简介
					.col-sm-9
						input#inputtSummary.form-control(type='text',name='movie[summary]')
				.form-group
					label.col-sm-1.control-label(for='inputtHurl') 海报地址
					.col-sm-9
						input#inputtHurl.form-control(type='text',name='movie[url]')							
				.form-group
					label.col-sm-1.control-label(for='inputtFlash') 播放地址
					.col-sm-9
						input#inputtFlash.form-control(type='text',name='movie[flash]')				
				.form-group
					label.col-sm-1.control-label(for='inputtren') 录入人
					.col-sm-9
						input#inputtren.form-control(type='text',name='movie[ren]')		
				.form-group
						input#inputsubmit.btn.btn-danger.del(type='submit',name='submit')							